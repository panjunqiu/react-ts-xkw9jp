{
  "private": true,
  "author": "panjunqiu.pjq <panjunqiu.pjq@alibaba-inc.com>",
  "scripts": {
    "dev": "umi dev",
    "build": "umi build",
    "postinstall": "umi setup",
    "setup": "umi setup",
    "start": "npm run start:dev",
    "start:dev": "cross-env REACT_APP_ENV=dev npm run dev",
    "start:pre": "cross-env REACT_APP_ENV=pre npm run dev",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:fix": "npm run prettier && eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=codeframe ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=codeframe ./src",
    "lint:prettier": "prettier --check \"**/*\" --end-of-line auto",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'"
  },
  "dependencies": {
    "@umijs/plugins": "^4.0.7",
    "antd": "^4.21.6",
    "umi": "^4.0.7"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "cross-env": "^7.0.3",
    "typescript": "^4.1.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:js"
    ],
    "*.{less,css}": [
      "npm run lint:style"
    ],
    "*.{md,json}": [
      "npm run lint:prettier"
    ]
  },
  "tnpm": {
    "mode": "yarn",
    "lockfile": "enable"
  }
}
